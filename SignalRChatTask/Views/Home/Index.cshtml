@page
<div class="container">
    <form method="post" asp-action="Index">
        <div class="row p-1">
            <div class="col-1 p-2">ConnectionId</div>
            <div class="col-5"><input type="text" id="connectionId" class="w-100" name="connectionId" /></div>
        </div>
        <div class="row p-1">
            <div class="col-1">Message</div>
            <div class="col-5"><input type="text" id="messageInput" class="w-100" name="message" /></div>
        </div>
        <div class="row p-1">
            <div class="col-6 text-end">
                <button class="btn btn-primary" id="sendButton" type="submit">Sub</button>
            </div>
        </div>
    </form>
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
    
   <div id="notify" class="text-warning"></div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>